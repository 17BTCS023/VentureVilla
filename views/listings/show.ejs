<% layout("/layouts/boilerplate") %>
<br>
<div class="row">
    <div class="row">
        <div class="col-4">
            <div class="card-body">
                <p class="card-text"> <b> <h4>  <%= listing.title %> </h4></b></p>
                <p class="card-text"><%= listing.description %></p>
                <p class="card-text"> &#8377;<%= listing.price.toLocaleString("en-In")%> / Night </p>
                <p class="card-text"><%= listing.location%> </p>
                <p class="card-text"><%= listing.country%></p>
            </div>
            <br>
            <div class="show-actions">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-success">Edit this Listing</a>
                <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE" class="offset-1">
                    <button class="btn btn-outline-danger">Delete this Listing</button>
                </form>
            </div>
        </div>
        <div class="col-8">
            <div class="card">
                <img src="<%= listing.image.url%>" alt="" class="card-img-top show-img">
            </div>
        </div>
    </div>
    <hr>
    <div class="col-4">
        <h5 class="mb-3 bt-3"><b>Leave a Review</b></h5>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 bt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div class="mb-3 bt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="2" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add text</div>
            </div>
            <button class="btn btn-dark mt-3">Add</button>
        </form>
    </div>
</div>
